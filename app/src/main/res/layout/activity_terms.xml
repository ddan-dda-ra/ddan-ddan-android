<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/Theme.DdanDdan"
        android:background="@color/background"
        android:paddingTop="48dp"
        >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="32sp"
            android:text="딴딴에 오신 것을 환영합니다"
            android:layout_marginStart="20dp"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/neodgm"
            android:textSize="24sp"
            android:lineSpacingExtra="3sp"
            android:textColor="#F5F5F5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="서비스 시작 및 가입을 위해 먼저\n가입 및 정보 제공에 동의해 주세요."
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/pretendard_light"
            android:textFontWeight="400"
            android:letterSpacing="-0.03125"
            android:lineSpacingExtra="5sp"
            android:textColor="#828282"
            app:layout_constraintStart_toStartOf="@id/tv_title"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ll_terms_all"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="32dp"
            android:paddingHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/tv_subtitle"
            >
            <ImageView
                android:id="@+id/btn_terms_all"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/sel_button_terms_all"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <TextView
                android:id="@+id/tv_terms_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="전체동의"
                android:fontFamily="@font/pretendard_medium"
                android:textSize="16sp"
                android:lineSpacingExtra="3sp"
                android:textColor="#C9C9C9"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@id/btn_terms_all"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ll_terms_1"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/ll_terms_all"
            >
            <ImageView
                android:id="@+id/btn_terms_1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_check_bold"
                app:tint="@color/selector_button_terms_single"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <TextView
                android:id="@+id/tv_terms_mandatory_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(필수)"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="16sp"
                android:lineSpacingExtra="3sp"
                android:textColor="#13E695"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@id/btn_terms_1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <TextView
                android:id="@+id/tv_terms_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="서비스 이용약관"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="16sp"
                android:lineSpacingExtra="3sp"
                android:textColor="#C9C9C9"
                app:layout_constraintStart_toEndOf="@id/tv_terms_mandatory_1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <ImageView
                android:id="@+id/btn_terms_detail_1"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_arrow_right_l"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:tint="#828282" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ll_terms_2"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/ll_terms_1"
            >
            <ImageView
                android:id="@+id/btn_terms_2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_check_bold"
                app:tint="@color/selector_button_terms_single"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <TextView
                android:id="@+id/tv_terms_mandatory_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(필수)"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="16sp"
                android:lineSpacingExtra="3sp"
                android:textColor="#13E695"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@id/btn_terms_2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <TextView
                android:id="@+id/tv_terms_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="개인정보 처리방침"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="16sp"
                android:lineSpacingExtra="3sp"
                android:textColor="#C9C9C9"
                app:layout_constraintStart_toEndOf="@id/tv_terms_mandatory_2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <ImageView
                android:id="@+id/btn_terms_detail_2"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_arrow_right_l"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:tint="#828282" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_start"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="10dp"
            android:background="#13E695"
            android:elevation="0dp"
            android:enabled="true"
            android:stateListAnimator="@null"
            android:fontFamily="@font/pretendard_semibold"
            android:textSize="16sp"
            android:text="시작하기"
            android:textColor="#212121"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>