<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="32sp"
            android:text="별명을 알려주세요"
            android:layout_marginStart="20dp"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/neodgm"
            android:textSize="24sp"
            android:lineSpacingExtra="3sp"
            android:textColor="#F5F5F5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/tv_name"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="별명"
            android:layout_marginTop="32dp"
            android:textSize="14sp"
            android:fontFamily="@font/pretendard_light"
            android:textFontWeight="400"
            android:letterSpacing="-0.03125"
            android:lineSpacingExtra="5sp"
            android:textColor="#828282"
            app:layout_constraintStart_toStartOf="@id/et_name"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="8dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:maxLength="10"
            android:background="@drawable/shape_rect4_elevation_level01"
            android:textSize="16sp"
            android:fontFamily="@font/pretendard_light"
            android:textFontWeight="400"
            android:letterSpacing="-0.03125"
            android:lineSpacingExtra="5sp"
            android:inputType="text"
            android:maxLines="1"
            android:textColorHint="#444444"
            android:textColor="#F5F5F5"
            android:hint="별명을 입력해 주세요"
            app:layout_constraintTop_toBottomOf="@id/tv_name"
            />

        <TextView
            android:id="@+id/tv_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@id/et_name"
            app:layout_constraintTop_toBottomOf="@id/et_name"
            android:text="형식이 올바르지 않아요"
            android:textColor="#FC4E6D"
            android:fontFamily="@font/pretendard_medium"
            android:letterSpacing="-0.03125"
            android:textSize="10sp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>